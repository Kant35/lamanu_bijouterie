{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}

    {# <h1>Category index</h1> #}

    {# {{ dump(app.flashes) }} #}

    <div class="row justify-content-end m-2">
        <a href="{{ path('app_category_add') }}" class="btn btn-success p-2 col-md-3">Ajouter une cétégorie</a>
    </div>

    {% for type, message in app.flashes %}
        <div class="alert alert-{{type}} col-4 mx-auto text-center">
            {{ message[0] }}
        </div>
    {% endfor %}

    <table class="table table-hover table-stripped text-center">
        <thead class="bg-dark text-white">
            <tr>
                <td>ID</td>
                <td>Nom</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.nom }}</td>
                    <td>
                        <a href="{{ path('app_category_update', {id:category.id})}}" class="text-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="{{ path('app_category_delete', {id:category.id})}}" class="text-danger"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
